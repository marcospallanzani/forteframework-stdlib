{
    "name": "forteframework/stdlib",
    "keywords": [
        "standard library"
    ],
    "homepage": "https://www.forteframework.com",
    "description": "ForteFramework Standard Library: a set of classes for general purposes.",
    "version": "1.1.0",
    "require": {
        "php": "^8.0",
        "psr/log": ">=1.0.0",
        "laminas/laminas-filter": "^2.13",
        "laminas/laminas-validator": "^2.15",
        "laminas/laminas-config": "^3.7",
        "vlucas/phpdotenv": "^5.4",
        "symfony/yaml": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "Forte\\Stdlib\\": [
                "src"
            ]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Forte\\Stdlib\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "mockery/mockery": "^1.4",
        "phpstan/phpstan": "^1.4",
        "slevomat/coding-standard": "^7.0",
        "php-parallel-lint/php-parallel-lint": "^1.3"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
